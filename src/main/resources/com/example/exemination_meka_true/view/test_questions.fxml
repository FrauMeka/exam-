<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.exemination_meka_true.controller.TestQuestionsController"
            style="-fx-background-color: #d9efd8;">
    <Label text="QUESTION" layoutX="150" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #006400;" />
    <Label fx:id="questionLabel" layoutX="50" layoutY="60" prefWidth="400" />
    <TextField fx:id="answerField" layoutX="50" layoutY="100" prefWidth="400" />
    <Button text="Submit Answer" layoutX="180" layoutY="160" prefWidth="150"
            style="-fx-background-color: #006400; -fx-text-fill: white;" onAction="#submitAnswer" />
</AnchorPane>
