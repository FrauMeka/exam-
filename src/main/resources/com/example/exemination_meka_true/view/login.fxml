<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.exemination_meka_true.controller.LoginController"
            style="-fx-background-color: #d9efd8;">
    <ImageView layoutX="170" layoutY="20" fitWidth="100" fitHeight="100">

    </ImageView>
    <Label text="ONLINE EXAMINATION SYSTEM" layoutX="80" layoutY="130"
           style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #006400;" />
    <Label text="UserName:" layoutX="100" layoutY="180" style="-fx-font-size: 14px;" />
    <TextField fx:id="usernameField" layoutX="180" layoutY="175" prefWidth="200" />
    <Button text="Login" layoutX="180" layoutY="260" prefWidth="90"
            style="-fx-background-color: #006400; -fx-text-fill: white;" onAction="#login" />
    <Button text="Register" layoutX="290" layoutY="260" prefWidth="90"
            style="-fx-background-color: #8B0000; -fx-text-fill: white;" onAction="#redirectToRegister" />
</AnchorPane>
